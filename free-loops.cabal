category:            Control
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:
    Control.Loop
    Control.Monad.Loop
  -- other-modules:
  -- other-extensions:
  build-depends:
    base >=4.7 && <5,
    bifunctors >=4.1 && <5,
    free >=4.7 && <5,
    strict >=0.3 && <1,
    transformers >=0.3 && <1
  ghc-options: -Wall
  hs-source-dirs:      src
  default-language:    Haskell2010
